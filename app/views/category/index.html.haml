.default-container
  -if user_signed_in?
    =render partial: "items/shared/header", locals: {}
  -else
    =render partial: "items/shared/header_signup"
.category-container.clearfix
  %main.c-container
    %section.c-title
      %h2
        カテゴリー一覧
    .large-main
      .large-category
        - @category.each do |category|
          %a.category-box
            %p.l-category-n
              = category.large_category
  %main.m-container.clearfix
    %section.l-title.clearfix
      %h4
        レディース
    .medium-main
      .medium-category
        - @mcategory.each do |mcategory|
          .category-box
            %li.m-category-n
              = mcategory.medium_category
          %a.s-category
            - @scategory.each do |scategory|
              %p
                =link_to "/large_category/1/medium_category/1/small_category/36?small_category_id=1", class: "name" do
                  = scategory.small_category
