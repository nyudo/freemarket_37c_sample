//新規会員登録時のアカウントの選択画面
.single-conteiner
  =render "items/shared/simple_header"
  .single-main
    .i-single-container
      .l-single-head
        %h2 新規会員登録
      .l-single-inner
        .l-single-content
          %a.btn-sns-facebook
            Facebookで登録
            .icon-facebook.fa-lg
              = fa_icon'facebook-square'
          %a.btn-sns-google
            Googleで登録
            .icon-google-plus.fa-lg
              = fa_icon'google-plus'
          %a.btn-mail
            メールアドレスで登録
            .icon-mail.fa-lg
              = fa_icon'envelope'
  =render "items/shared/simple_footer"
  = invisible_recaptcha_tags



//アカウント作成済みユーザーのログイン画面
.single-conteiner
  =render "items/shared/simple_header"
  .single-main
    .login-panel
      .login-no-account
        %p アカウントをお持ちでない方はこちら
        %a 新規会員登録
      .login-form-inner
        .btn-sns-facebook 
          Facebookでログイン
          .icon-facebook.fa-lg
            = fa_icon'facebook-square'
        .btn-sns-google
          Googleでログイン
          .icon-google-plus.fa-lg
            = fa_icon'google-plus'
      .login-meil
        .form
          %input{type: "password", class: "input-default", name: "meil-address", placeholder: "メールアドレス"}
        .form
          %input{type: "password", class: "input-default", name: "password", placeholder: "パスワード"}
        .form
          .login-submit
            ログイン
          %a パスワードをお忘れの方
  =render "items/shared/simple_footer"




//プロフィール編集画面
= render partial: 'items/shared/header'
.mypage-container.clearfix
  %main.l-container
    %section.title
      %h2
        プロフィール
    %section.profile-icon
      %figure
        = image_tag 'member_photo_noimage_thumb.png', :size =>'60x60', class: "user-image"
      .name-form
        %input{type: "text", class: "name-default", name: "meil-address", placeholder: ""}
      .user-number
    .setting-profile-content
      .form
        %input{type: "text_area", class: "input-default", name: "meil-address", placeholder: ""}
        .update-submit
          変更する
  = render partial: 'sidebar'
  = render partial: 'footer_sell_btn'
= render partial: 'items/shared/footer'




